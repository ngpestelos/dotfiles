RUBY_ENGINE="ruby"
RUBY_VERSION="2.3.0"

if [[ "$(uname)" == "Linux" ]]; then
  CHRUBY_ROOT="/usr/local/share/chruby"
else
  CHRUBY_ROOT="/usr/local/opt/chruby/share/chruby"
fi

CHRUBY_PATH="$CHRUBY_ROOT/chruby.sh"
CHRUBY_AUTO_PATH="$CHRUBY_ROOT/auto.sh"

source "$CHRUBY_PATH"
source "$CHRUBY_AUTO_PATH"

chruby "$RUBY_ENGINE"-"$RUBY_VERSION"
